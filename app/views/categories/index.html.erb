<p id="notice"><%= notice %></p>

<h1>カテゴリー一覧</h1>


 <%= form_tag(:action => "search") do %>
 <%= text_field_tag "search[categoryname]", @search_value %>
 <%= submit_tag "検索" %>
 <%= link_to "リセット", categories_path%>
 <% end %>









<table border="1" align="left">
  <thead>
    <tr>
      <th>カテゴリー名</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.categoryname %></td>
        <td><%= link_to '詳細', category %></td>
        <td><%= link_to '編集', edit_category_path(category) %></td>
        <td><%= link_to '削除', category, method: :delete, data: { confirm: '削除しますか？' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '新規作成', new_category_path %>
